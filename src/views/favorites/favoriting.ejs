<% const favorite = post.getFavoriteFor(currentUser.id) %>
<% if (favorite) { %>
  <form style="display: initial;" method="post"
    action="/topics/<%= post.topicId %>/posts/<%= post.id %>/favorites/<%= favorite.id %>/destroy">
    <button type="submit" class="btn btn-danger">Unfavorite</button>
  </form>
<% } else { %>
  <form style="display: initial;" method="post"
    action="/topics/<%= post.topicId %>/posts/<%= post.id %>/favorites/create">
    <button type="submit" class="btn btn-primary">Favorite</button>
  </form>
<% } %>